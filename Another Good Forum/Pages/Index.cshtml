@page
@model Another_Great_Forum.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h2 class="display-5">Welcome to AnotherGreatForum!</h2>
    <div id="login-status" class="mt-3"></div>
</div>

<div class="page-container">
    <div class="card-container"id="post"></div>
</div>


@section Scripts {
    <script>
        async function checkLogin() {
            try {
                const res = await fetch('https://localhost:7242/users/me', {
                    credentials: 'include'
                });
                const div = document.getElementById('login-status');

                if (res.ok) {
                    const data = await res.json();
                    div.innerHTML = `You are logged in! Your user ID: ${data.id} 
                                     <a class="btn btn-primary" href="@Url.Page("/Shared/CreateForum")">Create Post</a>`;
                } else {
                    div.innerHTML = `You are not logged in.`;
                }
            } catch (err) {
                console.error(err);
                alert("Error, couldn't log in..");
            }
        }

        async function loadPosts() {
            try {
                const postsResponse = await fetch("https://localhost:7242/posts", { credentials: 'include' });
                const posts = await postsResponse.json();
                const container = document.getElementById("post");
                
                posts.forEach(post => {
                    const card = document.createElement("div");
                    card.classList.add("card");
                    card.innerHTML += `
                                <h4 class="card-title">${post.title}</h4>
                                <p class="card-text">${post.body}</p>
                                <small class="card-date text-muted">${new Date(post.createdAt).toLocaleString()}</small>`;
                    container.appendChild(card);
                });

            } catch(err) {
                console.error(err);
                alert("Error! Couldn't load posts..");
            }
        }

        loadPosts();
        checkLogin();
    </script>
}
