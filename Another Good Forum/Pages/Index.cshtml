@page
@model Another_Great_Forum.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="start-page">
    <div class="text-center">
        <h2 class="display-5">Welcome to AnotherGreatForum!</h2>
        <div id="login-status" class="mt-3"></div>
    </div>

    <div class="card-container">
        <h3>Check out a post:</h3>

            <div id="post"></div>
           
    </div>
</div>



@section Scripts {
    <script>
        async function checkLogin() {
            try {
                const res = await fetch('https://localhost:7242/users/me', {
                    credentials: 'include'
                });
                const div = document.getElementById('login-status');

                if (res.ok) {
                    const data = await res.json();
                    div.innerHTML = `You are logged in! Your user ID: ${data.id} <br/>
                                     <a class="btn btn-primary" href="@Url.Page("/Shared/CreateForum")">Create Post</a>`;
                } else {
                    div.innerHTML = `You are not logged in.`;
                }
            } catch (err) {
                console.error(err);
            }
        }

        async function loadPosts(){
            //Loading posts
            try{
                const postsResponse = await fetch("https://localhost:7242/posts", { credentials: 'include' })
                const posts = await postsResponse.json();
                const container = document.getElementById("post");
                
                posts.forEach(post =>{
                    container.innerHTML = 
                    `
                     <div id="post">
                       <div class="card">
                         <div class="card-body">
                           <h3 class="card-title">${post.Title}</h3>
                           <p class="card-text">${post.Body}</p>
                           <small class="card-footer">${post.CreatedAt}</small>
                         </div>
                      </div>
                     </div>
                    `;
                });

                
            } catch(err){
                console.error(err);
            }

        }
        loadPosts();
        checkLogin();
    </script>
}
