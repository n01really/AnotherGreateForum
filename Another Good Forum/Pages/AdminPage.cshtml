@page
@model Another_Great_Forum.Pages.AdminPageModel
@{
    ViewData["Title"] = "Admin Page";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-4">
        <h1 class="display-4">Hello @Model.UserName! this is the admin page</h1>
        <p>You are not an admin.</p>
        <h4>@Model.ErrorMessage</h4>
        <p><a asp-page="/Index" class="btn btn-primary">Return to Home</a></p>
    </div>
}
else if (Model.IsAdmin)
{
    <div class="text-center">
        <h1 class="display-4">Admin Page</h1>
        <p class="lead">Welcome, @Model.UserName!</p>
        <p>You have administrative privileges. Here you can manage users, roles, posts, forums, and comments.</p>

        <div class="page-container">
            <div class="row mt-5">

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Manage Categories</h2>
                            <p class="card-text">View and add categories.</p>

                            <div class="mt-3" style="max-height: 300px; overflow-y: auto;">
                                <form method="post" asp-page-handler="CreateCategory" class="mb-3">
                                    <input type="text" name="Name" class="form-control mb-2" placeholder="Category name" required />
                                    <input type="text" name="Description" class="form-control mb-2" placeholder="Description (optional)" />
                                    <button type="submit" class="btn btn-success btn-sm w-100">+ Create Category</button>
                                </form>

                                @if (Model.Categories.Any())
                                {
                                    <ul class="list-group list-group-flush text-start">
                                        @foreach (var category in Model.Categories)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>@category.Name</strong><br />
                                                    <small class="text-muted">@category.Description</small>
                                                </div>
                                                <form method="post" asp-page-handler="DeleteCategory">
                                                    <input type="hidden" name="id" value="@category.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted">No categories found.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Manage Roles</h2>
                            <p class="card-text">Assign or remove roles for users.</p>
                            <div class="mt-3" style="max-height: 300px; overflow-y: auto;">
                                @if (Model.Users.Any())
                                {
                                    <ul class="list-group list-group-flush text-start">
                                        @foreach (var user in Model.Users)
                                        {
                                            <li class="list-group-item">
                                                <strong>@user.DisplayName</strong><br />
                                                <small class="text-muted">@user.Email</small>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted">No users found.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h2 class="card-title">Manage Posts</h2>
                            <p class="card-text">View and remove posts.</p>
                            <div class="mt-3" style="max-height: 300px; overflow-y: auto;">
                                @if (Model.Posts.Any())
                                {
                                    <ul class="list-group list-group-flush text-start">
                                        @foreach (var post in Model.Posts)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div style="cursor:pointer;"
                                                     onclick="showPostDetails('@post.Title', '@post.Category?.Name', '@post.Author?.DisplayName', '@post.CreatedAt.ToString("MMM dd, yyyy")', `@post.Body`)">
                                                    <strong>@post.Title</strong><br />
                                                    <small class="text-muted">by @post.Author?.DisplayName ?? "N/A"</small><br />
                                                    <small class="text-muted">@post.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </div>
                                                <form method="post" asp-page-handler="DeletePost">
                                                    <input type="hidden" name="id" value="@post.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted">No posts found.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="postDetailsModal" tabindex="-1" aria-labelledby="postDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="postDetailsModalLabel">Post Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h3 id="modalTitle"></h3>
                    <p><strong>Category:</strong> <span id="modalCategory"></span></p>
                    <p><strong>Author:</strong> <span id="modalAuthor"></span></p>
                    <p><strong>Date:</strong> <span id="modalDate"></span></p>
                    <hr />
                    <p id="modalContent"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function showPostDetails(title, category, author, date, content) {
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalCategory').innerText = category || 'N/A';
            document.getElementById('modalAuthor').innerText = author || 'N/A';
            document.getElementById('modalDate').innerText = date || '';
            document.getElementById('modalContent').innerHTML = content;

            var myModal = new bootstrap.Modal(document.getElementById('postDetailsModal'));
            myModal.show();
        }
    </script>
}
