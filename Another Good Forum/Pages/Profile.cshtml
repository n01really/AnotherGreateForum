@page
@model Another_Great_Forum.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="text-center mt-5">
    <!-- User Email on top -->
    <div id="email-display" class="fw-bold mb-3" style="font-size:1.2rem;"></div>

    <!-- Profile Picture -->
    <img id="profile-picture" src="/images/default-profile.png"
         class="img-thumbnail mb-3"
         style="width:150px; height:150px; border-radius:50%; object-fit:cover;" />

    <!-- Hidden file input for upload -->
    <input id="profile-picture-input" type="file" class="form-control mb-3" style="max-width:300px; margin:auto;" />

    <!-- Buttons side by side -->
    <div class="d-flex justify-content-center gap-3">
        <button id="save-btn" class="btn btn-primary">Save</button>
        <button id="logout-btn" class="btn btn-secondary">Logout</button>
    </div>
</div>

@inject IConfiguration Configuration
@section Scripts {
    <script>
        window.API_BASE_URL = "@Configuration["ApiSettings:BaseUrl"]";
        const profilePic = document.getElementById('profile-picture');
        const fileInput = document.getElementById('profile-picture-input');
        const emailDisplay = document.getElementById('email-display');
        const logoutBtn = document.getElementById('logout-btn');

        let currentFile = null;

        // Load user info
        async function loadUser() {
            try {
                const res = await fetch(`${window.API_BASE_URL}/users/current`, { credentials: 'include' });
                if(!res.ok){
                    window.location.href = '/Login'; // redirect if not logged in
                    return;
                }
                const data = await res.json();
                emailDisplay.textContent = data.email;
                profilePic.src = data.profilePictureUrl
                                 ? `${window.API_BASE_URL}${data.profilePictureUrl}`
                                 : '/images/default-profile.png';
            } catch(err){
                console.error('Failed to load user:', err);
            }
        }

        loadUser();

        // Preview new selected image
        fileInput.addEventListener('change', () => {
            const file = fileInput.files[0];
            if(file){
                profilePic.src = URL.createObjectURL(file);
                currentFile = file;
            }
        });

        // Delete picture
        function deletePicture() {
            profilePic.src = '/images/default-profile.png';
            currentFile = null;
        }

        // Save button
        document.getElementById('save-btn').addEventListener('click', async () => {
            if(currentFile){
                const formData = new FormData();
                formData.append('file', currentFile);

                const res = await fetch(`${window.API_BASE_URL}/users/profile-picture`, {
                    method: 'POST',
                    credentials: 'include',
                    body: formData
                });

                if(!res.ok){
                    alert('Upload failed');
                    return;
                }
            } else {
                // If deleted, call endpoint to remove picture
                await fetch(`${window.API_BASE_URL}/users/profile-picture/delete`, {
                    method: 'POST',
                    credentials: 'include'
                });
            }

            alert('Profile updated!');
        });

        // Logout button
        logoutBtn.addEventListener('click', async () => {
            try {
                const res = await fetch(`${window.API_BASE_URL}/users/logout`, {
                    method: 'POST',
                    credentials: 'include'
                });

                if(res.ok){
                    window.location.href = '/Login';
                } else {
                    alert('Logout failed');
                }
            } catch(err){
                console.error(err);
                alert('Network error during logout');
            }
        });
    </script>
}
